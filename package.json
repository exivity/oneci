{
  "name": "oneci",
  "private": true,
  "scripts": {
    "start": "lerna run --parallel start",
    "test": "lerna run test",
    "test:watch": "lerna run --parallel test:watch",
    "build": "yarn build:clean && lerna run build",
    "build:clean": "rimraf packages/*/lib",
    "build:watch": "lerna run --parallel build:watch",
    "build:travis": "packages/cli/bin/run convert --target=travis > .travis.yml",
    "watch": "run-p build:watch test:watch",
    "release": "lerna run release"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "@types/jest": "^24.0.12",
    "@types/node": "^11.13.8",
    "cz-conventional-changelog": "2.1.0",
    "husky": "^2.3.0",
    "jest": "^24.7.1",
    "lerna": "^3.13.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3",
    "semantic-release": "^15.13.3",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.4.5"
  },
  "version": "0.0.0-development",
  "repository": {
    "type": "git",
    "url": "https://github.com/exivity/oneci.git"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn build:travis && git add .travis.yml"
    }
  }
}
